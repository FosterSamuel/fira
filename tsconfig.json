{
    "include": [
        "src/*.ts"
    ],
    "exclude": [],
    "compilerOptions": {
        "declaration": true,
        "declarationDir": "./types",
        "noEmitOnError": true,
        "emitDeclarationOnly": true,
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitThis": true,
        "noImplicitReturns": true,
        "module": "esnext",
        "target": "ES2017",
        "lib": [
            "DOM",
            "ES2017"
        ]
    }
}